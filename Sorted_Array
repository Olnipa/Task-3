using System;

namespace sorting
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minArrayNumber = 0;
            int maxArrayNumber = 10;
            int arraySize = 10;
            int[] arrayOfNumbers = new int[arraySize];

            Console.Write("Исходный массив:");
            Console.SetCursorPosition(24,0);

            for (int i = 0; i < arrayOfNumbers.Length; i++)
            {
                arrayOfNumbers[i] = random.Next(minArrayNumber, maxArrayNumber);
                Console.Write(arrayOfNumbers[i] + " ");
            }

            for (int j = 0; j < arrayOfNumbers.Length; j++)
            {
                int minNumber = int.MaxValue;
                int minNumberIndex = 0;
                int currentNumberForReplace;

                for (int i = j; i < arrayOfNumbers.Length; i++)
                {
                    if (arrayOfNumbers[i] < minNumber)
                    {
                        minNumber = arrayOfNumbers[i];
                        minNumberIndex = i;
                    }
                }
                currentNumberForReplace = arrayOfNumbers[j];
                arrayOfNumbers[j] = minNumber;
                arrayOfNumbers[minNumberIndex] = currentNumberForReplace;
            }
            Console.Write("\nОтсортированный массив: ");
            Console.SetCursorPosition(24, 1);

            foreach (int number in arrayOfNumbers)
            {
                Console.Write(number + " ");
            }
        }
    }
}
